<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>CDAP</name>
      <displayName>Cask Data Application Platform</displayName>
      <comment>
        An abstraction layer on top of Hadoop and other open source infrastructure such as HBase, Hive, Tephra, and Tigon
        that enables developers to rapidly build, and operations to easily manage, real-time and batch data applications
      </comment>
      <version>3.0.0</version>

      <components>

        <component>
          <!-- CDAP Auth Server-->
          <name>CDAP_AUTH_SERVER</name>
          <displayName>CDAP Auth Server</displayName>
          <category>MASTER</category>
          <cardinality>0-2</cardinality>
          <commandScript>
            <script>scripts/auth.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>

        <component>
          <!-- CDAP CLI -->
          <name>CDAP_CLI</name>
          <displayName>CDAP CLI</displayName>
          <category>CLIENT</category>
          <cardinality>1+</cardinality>
          <commandScript>
            <script>scripts/cli.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>

        <component>
          <!-- CDAP Master -->
          <name>CDAP_MASTER</name>
          <displayName>CDAP Master</displayName>
          <category>MASTER</category>
          <cardinality>1-2</cardinality>
          <commandScript>
            <script>scripts/master.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
          <dependencies>
            <dependency>
              <name>ZOOKEEPER/ZOOKEEPER_SERVER</name>
              <scope>cluster</scope>
              <auto-deploy>
                <enabled>true</enabled>
                <co-locate>CDAP/CDAP_MASTER</co-locate>
              </auto-deploy>
            </dependency>
          </dependencies>
        </component>

        <component>
          <!-- CDAP Kafka Server-->
          <name>CDAP_KAFKA</name>
          <displayName>CDAP Kafka Server</displayName>
          <category>MASTER</category>
          <cardinality>1-2</cardinality>
          <commandScript>
            <script>scripts/kafka.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
          <dependencies>
            <dependency>
              <name>ZOOKEEPER/ZOOKEEPER_SERVER</name>
              <scope>cluster</scope>
              <auto-deploy>
                <enabled>true</enabled>
                <co-locate>CDAP/CDAP_MASTER</co-locate>
              </auto-deploy>
            </dependency>
          </dependencies>
        </component>

        <component>
          <name>CDAP_ROUTER</name>
          <displayName>CDAP Router</displayName>
          <category>MASTER</category>
          <cardinality>1+</cardinality>
          <commandScript>
            <script>scripts/router.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
          <dependencies>
            <dependency>
              <name>ZOOKEEPER/ZOOKEEPER_SERVER</name>
              <scope>cluster</scope>
              <auto-deploy>
                <enabled>true</enabled>
                <co-locate>CDAP/CDAP_MASTER</co-locate>
              </auto-deploy>
            </dependency>
          </dependencies>
        </component>

        <component>
          <name>CDAP_UI</name>
          <displayName>CDAP UI</displayName>
          <category>MASTER</category>
          <cardinality>1+</cardinality>
          <commandScript>
            <script>scripts/ui.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>

      </components>

      <osSpecifics>
        <osSpecific>
          <osFamily>redhat6</osFamily>
        </osSpecific>
        <osSpecific>
          <osFamily>ubuntu12</osFamily>
        </osSpecific>
      </osSpecifics>

      <requiredServices>
        <service>HBASE</service>
        <service>HDFS</service>
        <service>YARN</service>
        <service>ZOOKEEPER</service>
      </requiredServices>

      <!-- names for config files (under configuration dir) -->
      <configuration-dependencies>
        <config-type>cdap-site</config-type>
        <config-type>cdap-env</config-type>
      </configuration-dependencies>
      <restartRequiredAfterChange>false</restartRequiredAfterChange>
    </service>
  </services>
</metainfo>
